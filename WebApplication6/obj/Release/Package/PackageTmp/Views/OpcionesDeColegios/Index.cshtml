@model IEnumerable<WebApplication6.Models.OpcionesDeColegio>

@{
    Layout = null;
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaximoEstudiantes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreColegio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaximoEstudiantes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreColegio)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) 

            </td>
        </tr>
    }

</table>
