@model IEnumerable<WebApplication6.Models.CursoEstudiantes>

@{
    Layout = null;
}

    <div class="container">

        @if (Model.Count() == 0)
        {
            <p class="text-center m-3">
                @Html.ActionLink("Añadir al curso", "Create",null,new { @class="btn btn-success",data_modal=""})
            </p> 
        }
        else
        {
            <asp:calendar ></asp:calendar>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CursoEscolar.NombredeCurso)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estudiantes.Nombre)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CursoEscolar.NombredeCurso)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estudiantes.NombreCompleto)
                        </td>
                        <td>
                            @Html.ActionLink("Eliminar del grupo", "Delete", new { id = item.Id }, new { @class = "btn btn-danger",data_modal="" })
                        </td>
                    </tr>
                }

            </table>
        }

    </div>

<script src="~/Scripts/modalform.js"></script>